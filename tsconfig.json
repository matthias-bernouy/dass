{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"moduleResolution": "bundler",

		"allowJs": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,

		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": false,

		"paths": {
			"@resources/*": ["resources/*"],
			"@generated/*": ["node_modules/.dass-generated/*"]
		},

		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "dist/"
	},

	"include": [
		"src/**/*.ts", 
		"__project_template__/**/*.ts", 
		"__tests__/**/*.ts", "src/.dass-generated/ts/server.raw.ts",
	]

}
